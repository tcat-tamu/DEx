<project xmlns="http://maven.apache.org/POM/4.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <parent>
      <relativePath>../../../pom.xml</relativePath>
      <groupId>edu.tamu.tcat</groupId>
      <artifactId>dex.main</artifactId>
      <version>1</version>
   </parent>

   <groupId>edu.tamu.tcat</groupId>
   <artifactId>edu.tamu.tcat.dex.war</artifactId>
   <packaging>eclipse-repository</packaging>
   <version>1.0.0-SNAPSHOT</version>
   
   <properties>
      <war-filename>dex</war-filename>
   </properties>
   
   <build>
      <plugins>
         <!-- configure the p2 director -->
         <plugin>
            <groupId>${tycho-groupid}</groupId>
            <artifactId>tycho-p2-director-plugin</artifactId>
            <version>${tycho-version}</version>
            <executions>
               <execution>
                  <id>materialize-products</id>
                  <goals>
                     <goal>materialize-products</goal>
                  </goals>
               </execution>
               <execution>
                  <id>archive-products</id>
                  <goals>
                     <goal>archive-products</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         
         <!-- remove javax.servlet from the bundles.info -->
         <plugin>
            <groupId>${replacer-groupid}</groupId>
            <artifactId>${replacer-artifactid}</artifactId>
            <version>${replacer-version}</version>
            <executions>
               <execution>
                  <phase>verify</phase>
                  <goals>
                     <goal>replace</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
               <ignoreMissingFile>false</ignoreMissingFile>
               <includes>
                  <include>target/products/${project.artifactId}/linux/gtk/x86/configuration/org.eclipse.equinox.simpleconfigurator/bundles.info</include>
                  <include>target/products/${project.artifactId}/linux/gtk/x86/configuration/config.ini</include>
               </includes>
               <replacements>
                  <replacement>
                     <token>javax\.servlet,.*false</token>
                  </replacement>
                  <replacement>
                     <token>osgi\.bundles=</token>
                     <token>osgi.bundles=org.eclipse.equinox.servletbridge.extensionbundle,</token>
                  </replacement>
               </replacements>
            </configuration>
         </plugin>
         
         <!-- configure the assembly plugin to zip the war file -->
         <plugin>
            <groupId>${maven-plugins-groupid}</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>${assembly-version}</version>
            <configuration>
               <descriptors>
                  <descriptor>assembly.xml</descriptor>
               </descriptors>
               <!-- configure the war filename -->
               <finalName>${war-filename}</finalName>
               <appendAssemblyId>false</appendAssemblyId>
            </configuration>
            <executions>
               <execution>
                  <id>make-assembly</id>
                  <phase>verify</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>

</project>
